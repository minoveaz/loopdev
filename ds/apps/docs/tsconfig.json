{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@loopdev/ui": ["../../packages/ui/src"],
      "@loopdev/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["src", "stories", ".storybook"]
}